{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"],
      "@zos/*": ["./node_modules/@zeppos/device-types/*"]
    },
    "types": ["@zeppos/device-types"],
    "outDir": "./dist"
  },
  "include": ["lib/**/*", "app-side/**/*", "page/**/*"],
  "exclude": ["node_modules", "dist"]
}